{
  "compilerOptions": {
    "outDir": "js",
    "target": "ES2017",
    "module": "UMD",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "newLine": "lf",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "noEmitHelpers": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}